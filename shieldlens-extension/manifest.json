{
  "name": "ShieldLens AI",
  "description": "Real-time browser protection against sensitive data leaks & deepfake scams.",
  "version": "0.1.0",
  "manifest_version": 3,
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["ui.css"],
      "run_at": "document_start"
    }
  ]
}
